<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true"
            prefHeight="720"
            prefWidth="1220"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.bapakos.controller.admin.AdminEditKostController">
    <content>
        <VBox fx:id="mainContent" spacing="25">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>

            <!-- Informasi Umum -->
            <VBox styleClass="form-panel" spacing="15">
                <padding><Insets top="10" right="10" bottom="10" left="10" /></padding>
                <VBox spacing="5">
                    <Label text="Nama Kos" styleClass="input-label" />
                    <TextField fx:id="nameField" promptText="Contoh: Kos Melati Indah" />
                </VBox>
                <VBox spacing="5">
                    <Label text="Harga Kos (per bulan)" styleClass="input-label" />
                    <TextField fx:id="priceField" promptText="Contoh: 850000" />
                </VBox>
                <VBox spacing="5">
                    <Label text="Deskripsi" styleClass="input-label" />
                    <TextArea fx:id="descriptionField" styleClass="text-area" promptText="Berikan deskripsi singkat mengenai properti Anda..." prefRowCount="4" />
                </VBox>
            </VBox>

            <!-- Lokasi & Gambar -->
            <VBox styleClass="form-panel" spacing="15">
                <padding><Insets top="10" right="10" bottom="10" left="10" /></padding>
                <Label text="Lokasi &amp; Gambar" styleClass="panel-title" />
                <HBox spacing="30">
                    <VBox spacing="15" HBox.hgrow="ALWAYS">
                        <HBox spacing="20">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Provinsi" styleClass="input-label" />
                                <ComboBox fx:id="provinceComboBox" promptText="Pilih Provinsi" prefWidth="315" />
                            </VBox>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Kota/Kabupaten" styleClass="input-label" />
                                <ComboBox fx:id="cityComboBox" promptText="Pilih Kota/Kabupaten" prefWidth="315" />
                            </VBox>
                        </HBox>
                        <VBox spacing="5">
                            <Label text="Kode Pos" styleClass="input-label" />
                            <TextField fx:id="codePosField" promptText="Contoh: 17111" />
                        </VBox>
                        <VBox spacing="5">
                            <Label text="Alamat" styleClass="input-label" />
                            <TextArea fx:id="addressField" promptText="Nama jalan, nomor rumah, kecamatan, desa/kelurahan, RT/RW..." prefRowCount="4" />
                        </VBox>
                    </VBox>
                    <VBox spacing="10" prefWidth="300">
                        <Label text="Gambar Properti" styleClass="input-label" />
                        <StackPane fx:id="dropZoneContainer" styleClass="image-drop-zone" VBox.vgrow="ALWAYS">
                            <VBox fx:id="dropZoneContent" alignment="CENTER" spacing="10">
                                <ImageView fitHeight="30" fitWidth="30">
                                    <Image url="@/image/add-icon.png" />
                                </ImageView>
                                <Label text="Klik untuk memilih gambar..." />
                            </VBox>
                            <ImageView fx:id="previewImageView" fitHeight="200" fitWidth="280" preserveRatio="true" styleClass="image-preview" />
                            <Button fx:id="deleteImageButton" text="âœ•" styleClass="delete-image-button" visible="false" StackPane.alignment="TOP_RIGHT">
                                <StackPane.margin><Insets top="5" right="5" /></StackPane.margin>
                            </Button>
                        </StackPane>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Panel Fasilitas (readonly) -->
            <VBox styleClass="form-panel" spacing="15">
                <padding><Insets top="10" right="10" bottom="10" left="10" /></padding>
                <Label fx:id="facilities" text="Fasilitas" styleClass="panel-title" />
                <FlowPane fx:id="facilityPane" hgap="30" vgap="15">
                    <children>
                        <CheckBox fx:id="acCheckBox" text="AC" disable="true" />
                        <CheckBox fx:id="kmdCheckBox" text="Kamar Mandi Dalam" disable="true" />
                        <CheckBox fx:id="kmlCheckBox" text="Kamar Mandi Luar" disable="true" />
                        <CheckBox fx:id="wifiCheckBox" text="Wifi" disable="true" />
                    </children>
                </FlowPane>
            </VBox>

            <!-- Tombol Aksi -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="cancelBtn" text="Batal" onAction="#handleCancel" styleClass="cancel-button"/>
                <Button fx:id="saveBtn"  text="Simpan Perubahan" onAction="#handleSave" styleClass="create-button"/>
            </HBox>
        </VBox>
    </content>
</ScrollPane>
